[InputMethod]
Name=XKJD27C
Icon=fcitx-xkjd27c
Label=27C
LangCode=zh_CN
Addon=table
Configurable=True

[Table]
File=./xkjd27c.main.dict
# 选择第二个候选词
# SecondCandidate=
# 选择第三个候选词
# ThirdCandidate=
# 页大小
PageSize=9
# 自动选择候选词之后提交
CommitAfterSelect=True
# 取消激活输入法时提交输入缓冲区
CommitWhenDeactivate=True
# 提交无效分段
CommitInvalidSegment=False
# 使用全角字符
UseFullWidth=False
# 忽略内置标点
IgnorePunc=False
# 将第一个候选词作为预编辑文本
FirstCandidateAsPreedit=True
# 将嵌入预编辑文本的光标固定在开头
PreeditCursorPositionAtBeginning=False
# 快速输入的触发键
QuickPhraseKey=[
# 触发快速输入的文本
QuickPhraseText=ABCDEFGHIJLKLMNOPQRSTUVWXYZ
# 不对短于...的词排序
NoSortInputLength=2
# 排序规则
OrderPolicy=Freq
# 使用系统语言模型
UseSystemLanguageModel=True
# 根据当前上下文排序候选词
UseContextRelatedOrder=False
# 模糊键
MatchingKey=z
# 触发拼音的前缀键
PinyinKey=[
# 自动选择候选词
AutoSelect=True
# 选择唯一候选词的长度限制
AutoSelectLength=-1
# 选择唯一候选词的正则表达式
# AutoSelectRegex=
# 没有匹配时自动选择
NoMatchAutoSelectLength=1
# 没有匹配时自动选择的正则表达式
# NoMatchAutoSelectRegex=
# 自动词组长度
AutoPhraseLength=4
# 词组参与自组词
AutoPhraseWithPhrase=False
# 候选词中自动组词的标记符号
MarkerForAutoPhrase=*
# 在输入...次后保存自动组词
SaveAutoPhraseAfter=3
# 精确匹配
ExactMatch=False
# 学习
Learning=True
# 显示词的提示
Hint=True
# 显示自定义提示
DisplayCustomHint=True
# 提示和候选词之间的分隔符文本
HintSeparator= ~
# 候选词列表方向
CandidateLayoutHint="Not set"
# 允许小键盘作为码表输入
KeypadAsInput=False

